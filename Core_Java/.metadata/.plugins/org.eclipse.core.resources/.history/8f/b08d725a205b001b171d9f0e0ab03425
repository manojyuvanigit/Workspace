package test_package;
import java.io.*;
import java.util.*;

public class test1 
{
	
	
	public static void main(String args[])
	{
		test1 obj=new test1();
		
		int[] nums=new int[] {0,1,2,3,4};
		int[] index=new int[] {0,1,2,2,1};
		
		//obj.indexSwap(nums,index);
		
		char[] chars=new char[] {'a','a','b','b','c','c'};
         
		obj.charCount(chars);
	}
	
	void charCount(char chars[])
	{
		int counter=0;
		for(int i=0;i<chars.length;i++)
		{
			System.out.println(chars[i]);
		
			for(int j=i;j<chars.length;j++)
			{
				if(chars[i] == chars[j])
				{
					counter++;
				}
				else
				{
					i=j;
					break;
				}
			}
			
			if(counter > 1)
			{
				System.out.println(counter);
			}
			counter=0;
			
		}
	}
	void indexSwap(int nums[],int index[])
	{
		int[] target=new int[1];
		
		
		for(int i=0;i<nums.length;i++)
		{
			if(i==0)
			{
				target[index[0]]=nums[index[0]];
			}
			else
			{
				if(target.length<i)
				{
					target[index[i]]=nums[index[i]];
				}
				else
				{
					
				}
			}
		}
	}
	
}
